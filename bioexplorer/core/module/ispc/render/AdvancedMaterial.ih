#pragma once

#include <bioexplorer/core/plugin/common/CommonTypes.h>

#include <ospray/SDK/common/Material.ih>
#include <ospray/SDK/math/vec.ih>
#include <ospray/SDK/texture/Texture2D.ih>
#include <ospray/SDK/texture/TextureParam.ih>

struct AdvancedMaterial
{
    uniform Material super;

    TextureParam map_d;
    float d;
    TextureParam map_Kd;
    vec3f Kd;
    TextureParam map_Ks;
    vec3f Ks;
    TextureParam map_Ns;
    float Ns;
    TextureParam map_Bump;
