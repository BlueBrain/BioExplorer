    float a;
    TextureParam map_refraction;
    float refraction;
    TextureParam map_reflection;
    float reflection;

    // Extra parameters
    MaterialShadingMode shadingMode;
    float userParameter;
    MaterialChameleonMode chameleonMode;
    uint32 nodeId;
    bool castUserData;
