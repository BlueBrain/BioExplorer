// ospray
#include <ospray/SDK/camera/PerspectiveCamera.ih>
#include <ospray/SDK/common/Model.ih>
#include <ospray/SDK/fb/FrameBuffer.ih>
#include <ospray/SDK/lights/Light.ih>
#include <ospray/SDK/render/Renderer.ih>
#include <ospray/SDK/texture/Texture2D.ih>

// obj renderer
#include "BioExplorerMaterial.ih"

// Brayns
#include "utils/BioExplorerRandomGenerator.ih"

struct BioExplorerFieldsRenderer
{
    Renderer super;

    // Rendering attributes
    const uniform Light* uniform* uniform lights;
    uint32 numLights;
    BioExplorerMaterial* bgMaterial;

    // Transfer function attributes
    const uniform TransferFunction* uniform transferFunction;

    float exposure;
    bool useHardwareRandomizer;

    float shadows;
    bool shadingEnabled;
    float softShadows;
    bool softnessEnabled;

    float timestamp;
    int randomNumber;

    float pixelOpacity;

    float step;
    uint32 maxSteps;

    // Octree
    float distance;
    float cutoff;

    // Octree
    uniform float* uniform userData;
    uint64 userDataSize;
    vec3f dims;
    vec3f spacing;
    vec3f offset;
    uint64 startIndices;
    uint64 startData;
};
